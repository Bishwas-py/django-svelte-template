#!/bin/bash

export PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/" && pwd)"

run() {
    "$PROJECT_ROOT/bin/run" "$@"
}
format() {
    pre-commit run --all-files
}
configure() {
    "$PROJECT_ROOT/bin/configure" "$@"
}

